<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.romania</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="150"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Romania" data-key="l10n_ro_config" groups="base.group_no_one">
                        <div id="l10n_ro_config">
							<h2>General</h2>
							<div class="row mt16 o_settings_container">
								<div class="col-xs-12 col-md-6 o_setting_box" title="Update Siruta Data">
									<div class="o_setting_left_pane">
										<field name="siruta_update"/>
									</div>
									<div class="o_setting_right_pane">
										<label for="siruta_update"/>
										<div class="text-muted">
											Update Siruta Data.
										</div>
									</div>
								</div>
								<div class="col-xs-12 col-md-6 o_setting_box" title="Add Siruta on Addresses">
									<div class="o_setting_left_pane">
										<field name="module_l10n_ro_siruta"/>
									</div>
									<div class="o_setting_right_pane">
										<label for="module_l10n_ro_siruta"/>
										<div class="text-muted">
											Add Siruta on Addresses.
										</div>
									</div>
								</div>
								<div class="col-xs-12 col-md-6 o_setting_box" title="Add Unicity on Partners">
									<div class="o_setting_left_pane">
										<field name="module_l10n_ro_partner_unique"/>
									</div>
									<div class="o_setting_right_pane">
										<label for="module_l10n_ro_partner_unique"/>
										<div class="text-muted">
											Add Unicity on Partners.
										</div>
									</div>
								</div>
								<div class="col-xs-12 col-md-6 o_setting_box" title="Create Romanian Partners from Anaf, Openapi">
									<div class="o_setting_left_pane">
										<field name="module_l10n_ro_partner_create_by_vat"/>
									</div>
									<div class="o_setting_right_pane">
										<label for="module_l10n_ro_partner_create_by_vat"/>
										<div class="text-muted">
											Create Romanian Partners from Anaf, Openapi.
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
                </xpath>
            </field>
        </record>
</odoo>
